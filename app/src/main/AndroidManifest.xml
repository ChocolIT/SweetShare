<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chocolit.sweetshare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MyProducts"
            android:label="@string/title_activity_my_products"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Categories"
            android:label="@string/title_activity_categories" />
        <activity android:name=".ProductLoadingScreen"></activity>
        <activity android:name=".ProductPage" />
-        <activity android:name=".EditUserProfile" />
        <activity android:name=".Login" />
        <activity android:name=".PasswordRecovery" />
        <activity android:name=".Signup" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>